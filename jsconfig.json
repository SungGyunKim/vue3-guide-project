{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"], // the src folder
      "@@/*": ["./*"] // the project's root folder
    },
    "sourceMap": true,
    "checkJs": true // Typecheck .js files.
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "public"]
}
