{
  "compilerOptions": {
    "module": "ES2020",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"], // the src folder
      "@@/*": ["./*"] // the project's root folder
    },
    "allowJs": true,
    "sourceMap": true
    //"checkJs": true // Typecheck .js files.
  },
  "vueCompilerOptions": {
    "experimentalDisableTemplateSupport": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "public"]
}
